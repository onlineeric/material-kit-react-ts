{
	"compilerOptions": {
	  "baseUrl": ".",                           // Base directory to resolve non-absolute module names
	  "target": "es5",                          // Specify ECMAScript target version
	  "lib": ["dom", "dom.iterable", "esnext"], // Libraries that will be included in the compilation
	  "allowJs": true,                          // Allow JavaScript files to be compiled
	  "skipLibCheck": true,                     // Skip type checking of all declaration files (*.d.ts)
	  "esModuleInterop": true,                  // Allow default imports from modules with no default exports
	  "allowSyntheticDefaultImports": true,     // Allow synthetic default imports
	  "strict": true,                           // Enable all strict type-checking options
	  "forceConsistentCasingInFileNames": true, // Disallow inconsistently cased references
	  "module": "esnext",                       // Specify module code generation method
	  "moduleResolution": "node",               // Use Node.js module resolution mechanism
	  "resolveJsonModule": true,                // Allow importing JSON modules
	  "isolatedModules": true,                  // Ensure each file can be transpiled independently
	  "noEmit": true,                           // Do not emit outputs (useful when using Babel or another bundler)
	  "jsx": "react-jsx"                        // Support JSX in .tsx files
	},
	"include": [
	  "src/**/*" // Include all files in the src folder
	],
	"exclude": [
	  "node_modules", // Exclude node_modules directory from compilation
	  "**/*.spec.ts"  // Optionally exclude test files
	]
  }
  